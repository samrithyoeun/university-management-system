<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.fluffy.samrith.university_managment_system.student.StudentHomeActivity">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:src="@mipmap/student"
    app:civ_border_color="#000000"
    app:civ_border_width="2dp"
    android:padding="16dp"
    android:id="@+id/studentProfilePicture"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/studentProfilePicture"
    android:id="@+id/StudentName"
    android:text="Hello !"
    android:textSize="24dp"
    android:textColor="#000000"
    android:textAlignment="center"
    android:textStyle="bold"
    android:padding="10dp"
    />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/StudentName"
        android:padding="12dp"
        android:id="@+id/studentFeatureList">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
